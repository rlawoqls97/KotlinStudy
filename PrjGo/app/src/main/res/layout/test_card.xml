<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/tes_card_view"
        android:layout_width="175dp"
        android:layout_height="204dp"
        android:layout_marginLeft="12dp"

        android:focusable="false"
        card_view:cardBackgroundColor="@color/gray"
        card_view:cardCornerRadius="13dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView

                android:id="@+id/main_image"
                android:layout_width="165dp"
                android:layout_height="90dp"
                android:layout_weight="0.8"
                android:scaleType="centerCrop"
                android:src="@color/white"
                card_view:riv_border_color="#333333"
                card_view:riv_corner_radius_top_left="13dp"
                card_view:riv_corner_radius_top_right="13dp"
                card_view:riv_mutate_background="true"
                card_view:riv_oval="false" />

            <TextView
                android:id="@+id/item_detail"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>